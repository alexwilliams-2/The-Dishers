
<div class="container">
  <div id="myCarousel" class="carousel slide w-50" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->

    <div class="carousel-inner">
      <% @favourites.each_with_index do |favourite, index| %>
      <div class="item <%= index ==  0 ? 'active' : '' %>">
        <%= cl_image_tag favourite.business.photo.key, class: "d-block w-100"%>
        <div class="carousel-caption">
          <h3><%= favourite.business.name %></h3>
          <p><%= favourite.business.address %></p>
        </div>
      </div>
      <% end %>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
