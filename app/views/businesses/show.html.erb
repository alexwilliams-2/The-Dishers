<% public_id = Cloudinary::Utils.cloudinary_url(@business.first.photo.key, type: :asset)[/[^\/]+(?=\.[^.]+\z)/] %>

<div class="banner-business" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.7)), url('<%= cl_image_path(@business.first.photo.key) %>');">
  <div class="business-banner-content row w-100 align-items-center">
    <div class="col-sm-3">
       <div class="like-button" style="transform: scale(0.50">
          <%= button_to business_user_favourites_path(@business.first.id), class: "btn-ghost like-wrapper ripple like-filled", method: :post, remote: true,
          "data-controller" => "like-button", "data-action" => "like-button#fillheart" do %>
            <svg class="<%= current_user.user_favourites.where(business_id: @business.first.id).any? ?  'heart-filled' : 'heart' %>" width="1" height="1" viewBox="0 0 24 24" data-like-button-target="likeButton">
              <path d="M12,21.35L10.55,20.03C5.4,15.36 2,12.27 2,8.5C2,5.41 4.42,3 7.5,3C9.24,3 10.91,3.81 12,5.08C13.09,3.81 14.76,3 16.5,3C19.58,3 22,5.41 22,8.5C22,12.27 18.6,15.36 13.45,20.03L12,21.35Z"></path>
            </svg>
          <% end %>
      </div>
    </div>
    <div class="col-sm-9">
      <%# <div class="d-flex justify-content-end">
        <button type="button" class="btn btn-ghost" data-bs-toggle="modal" data-bs-target="#new_review_modal">
          Add a review
        </button>
      </div> %>
      <h2 class="business-banner-heading"><%= @business.first.name %></h2>
      <div class="business-rating">
        <% @business.first.reviews.each do |review| %>
        <% @ratings =[] %>
          <% @ratings.push(review.rating) %>
        <% end %>
        <% unless @business.first.reviews.empty? %>
          <% @rating = (@ratings.sum / @business.first.reviews.length).ceil %>
          <div class="rating-stars">
            <% @rating.to_i.times do %>
              <i class="fa-solid fa-star" style="color: #009eff;"></i>
            <% end %>
          </div>
        <% end %>
        <% @recommended_array = @business.first.reviews.select { |review| review.recommended } %>
         <p class="business-info"><%= pluralize(@recommended_array.length, "Disher") %> recommend working here </p>
         <button type="button" class="btn btn-flat mt-3" data-bs-toggle="modal" data-bs-target="#new_review_modal">
          Add a review
        </button>
      </div>
    </div>
  </div>
</div>

<div class="container-xl">
  <div class="business-card-show w-100">
    <%# As the show method in business controller was changed to where(id: params[:id]) (AN ARRAY WAS CREATED), we have to use .first or .last to get this business out of the array %>
    <div class="business-card-show-body col-sm-6">
      <h5 class="business-card-title-show"><%= @business.first.name %></h5>
      <p class="business-card-text-show"><%= @business.first.description %></p>
    </div>
    <ul class="list-group list-group-flush mb-0 col-sm-6">
      <li class="list-group-item"> <strong> Address: </strong> <%= @business.first.address %></li>
      <li class="list-group-item"> <strong> Category: </strong> <%= @business.first.category %></li>
      <li class="list-group-item"> <strong> Size: </strong> <%= pluralize @business.first.size, 'employee'%></li>
      <li class="list-group-item"> <strong> Business Hours: </strong> <%= @business.first.business_hours %></li>
      <li class="list-group-item"> <strong> Email: </strong> <%= @business.first.email %></li>
      <li class="list-group-item"> <strong> Phone Number: </strong> <%= @business.first.phone_number %></li>
      <li class="list-group-item"> <strong> Average wage: </strong>
        <% @business.first.reviews.each do |review| %>
          <% @wages = [] %>
          <% @wages.push(review.wage) %>
        <% end %>
        <% unless @business.first.reviews.empty? %>
          <%= number_to_currency((@wages.sum / @business.first.reviews.length), options = {unit: "Â£"}) %> </p>
        <% end %>
      </li>
    </ul>
  </div>
  <div class="main-container mt-5 w-100">
    <%# <div class="container m-0"> %>
    <div class="businesses-for-map col-sm-9">
      <h2> <strong> <%= pluralize @business.first.reviews.size, "Review" %> </strong></h2>
      <% if @business.first.reviews.blank? %>
      <h3> Be the first to review <%= @business.name %> </h3>
      <% else %>
      <% @business.first.reviews.each do |review| %>
      <div class="review-card col col-sm-10">
        <div class="col-sm-3">
          <div>
            <h4 class="mt-2 mb-0 username text-left">@<%= review.user.username %> <%= link_to chat_path(other_user_id: review.user.id), class: "message-icon" do %>
            <i class="fa-regular fa-message" style="color: #009eff;"></i>
          <% end %></h4>

            <% review.rating.to_i.times do %>
            <span class="fa fa-star star-active ml-3"></span>
            <% end %>
          </div>
        </div>
        <div class="col-sm-6">
          <h4 class="blue-text mt-3">"<%= review.title %>"</h4>
          <p class="review-content">"<%= review.content %>"</p>

        </div>
        <div class="col-sm-3" data-controller="upvote">
          <div class="like mr-3 vote">
            <img src="https://i.imgur.com/mHSQOaX.png" data-action="click->upvote#upvote" id="<%=review.id %>">
            <span class="blue-text pl-2" data-upvote-target="upVoteNumber"> <%= rand(1..50) %>
            </span>
          </div>
          <div class="unlike vote">
            <img src="https://i.imgur.com/bFBO3J7.png" data-action="click->upvote#downvote">
            <span class="text-muted pl-2" data-upvote-target="downVoteNumber"> <%= rand(1..20) %></span>
          </div>
        </div>
      </div>
      <% end %>
      <% end %>
    </div>
  <div id="map-for-show" style="width: 60%; height: 100vh;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
</div>
<%= render "modal" %>
