<% public_id = Cloudinary::Utils.cloudinary_url(@business.first.photo.key, type: :asset)[/[^\/]+(?=\.[^.]+\z)/] %>

<div class="banner-business" style="background-image: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('https://images.unsplash.com/photo-1519624133901-3420156d01b2?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2232&q=80');">
  <div class="business-banner-content row align-items-center">
    <div class="col-sm-4">
      <div class="like-button" style="transform: scale(0.50)">
        <% if current_user.user_favourites.where(business_id: @business.first.id).any? %>
          <%= button_to business_user_favourites_path(@business.first.id), class: "btn-ghost like-wrapper ripple like-filled", method: :post, remote: true do %>
            <svg class="heart-filled" width="1" height="1" viewBox="0 0 24 24">
              <path d="M12,21.35L10.55,20.03C5.4,15.36 2,12.27 2,8.5C2,5.41 4.42,3 7.5,3C9.24,3 10.91,3.81 12,5.08C13.09,3.81 14.76,3 16.5,3C19.58,3 22,5.41 22,8.5C22,12.27 18.6,15.36 13.45,20.03L12,21.35Z"></path>
            </svg>
          <% end %>
        <% else %>
          <%= button_to business_user_favourites_path(@business.first), class: "btn-ghost like-wrapper ripple", method: :post, remote: true do %>
            <svg class="heart" width="1" height="1" viewBox="0 0 24 24">
              <path d="M12,21.35L10.55,20.03C5.4,15.36 2,12.27 2,8.5C2,5.41 4.42,3 7.5,3C9.24,3 10.91,3.81 12,5.08C13.09,3.81 14.76,3 16.5,3C19.58,3 22,5.41 22,8.5C22,12.27 18.6,15.36 13.45,20.03L12,21.35Z"></path>
            </svg>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-sm-8">
      <h2 class="business-banner-heading"><%= @business.first.name %></h2>
      <div class="business-rating">
        <% @business.first.reviews.each do |review| %>
          <% @ratings = [] %>
          <% @ratings.push(review.rating) %>
        <% end %>
        <% unless @business.first.reviews.empty? %>
          <% @rating = (@ratings.sum / @business.first.reviews.length).ceil %>
          <div class="rating-stars">
            <% @rating.to_i.times do %>
              <i class="fa-solid fa-star" style="color: #009eff;"></i>
            <% end %>
          </div>
        <% end %>
        <% @recommended_array = @business.first.reviews.select { |review| review.recommended } %>
        <p class="business-info"><%= pluralize(@recommended_array.length, "Disher") %> recommends working here</p>
      </div>
    </div>
  </div>
</div>


<div class="main-container">
  <div class="container">
    <div class="businesses-for-map">
      <h2><%= @business.first.name %></h2>

      <%= cl_image_tag @business.first.photo.key, height: 300%> <%# As the show method in business controller was changed to where(id: params[:id]) (AN ARRAY WAS CREATED), we have to use .first or .last to get this business out of the array %>
      <p> <strong> <%= pluralize @business.first.reviews.size, "Review" %> </strong></p>

      <% if @business.first.reviews.blank? %>
        <h3> Be the first to review <%= @business.name %> </h3>

      <% else @business.first.reviews.each do |review| %>
        <div class="review-card m-2 mt-5 col-sm-6">
          <div class="review-card-user-info">
            <h4> <%= review.user.username %> says ... </h4>
            <p> <strong> Position: </strong> <%= review.job_title %> </p>
            <p> <strong> Wage: </strong> <%= number_to_currency(review.wage, unit: "£") %> per hour </p>
          </div>
          <div class="review-card-content">
            <p> <%= "#{("⭐" * review.rating)}" %> </p>
            <p> <%= review.content %> <p>
          </div>
        </div>
        <% end %>
      <% end %>



      <button type="button" class="btn-ghost" data-bs-toggle="modal" data-bs-target="#new_review_modal">
        Add a review
      </button>
    </div>

