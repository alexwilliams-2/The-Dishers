<div class="container">

  <h2><%= @business.name %></h2>
  <%= cl_image_tag @business.photo.key, height: 300%>
  <p> <strong> <%= pluralize @business.reviews.size, "Review" %> </strong></p>

  <% if @business.reviews.blank? %>
    <h3> Be the first to review <%= @business.name %> </h3>
    <ul class="list-group">
      <% else @business.reviews.each do |review| %>
      <li class="list-group-item"><%= "#{("⭐" * review.rating)}" %></li>
        <li class="list-group-item"><%= review.content %></li>
      <% end %>
    <% end %>
  </ul>

 <button type="button" class="btn btn-flat" data-bs-toggle="modal" data-bs-target="#new_review_modal">
        add a review
      </button>
  <%= button_to 'Add to Favourites', business_user_favourites_path(@business), class: "btn-ghost" %>
