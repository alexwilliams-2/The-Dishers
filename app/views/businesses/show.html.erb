<div class="container">

  <h2><%= @business.name %></h2>
  <%= cl_image_tag @business.photo.key, height: 300%>
  <p> <strong> <%= pluralize @business.reviews.size, "Review" %> </strong></p>

  <% if @business.reviews.blank? %>
    <h3> Be the first to review <%= @business.name %> </h3>

  <% else @business.reviews.each do |review| %>
    <div class="review-card m-2 mt-5 col-sm-6">
      <div class="review-card-user-info">
        <h4> <%= review.user.email %> says ... </h4>
        <p> <strong> Position: </strong> <%= review.job_title %> </p>
        <p> <strong> Wage: </strong> <%= number_to_currency(review.wage, unit: "£") %> per hour </p>
      </div>
      <div class="review-card-content">
        <p> <%= "#{("⭐" * review.rating)}" %> </p>
        <p> <%= review.content %> <p>
      </div>
    </div>
  <% end %>
  <% end %>

  <%= render :partial => "businesses/review" %>

  <%= button_to 'Add to Favourites', business_user_favourites_path(@business), class: "btn-ghost" %>
