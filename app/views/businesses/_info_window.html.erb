  <div class="card-infos">
    <div>
      <h2><%= business.name %></h2>
      <p><%= business.address %></p>
    </div>
    <% business.reviews.each do |review| %>
      <% @wages.push(review.wage) %>
      <% end %>
    <% unless business.reviews.empty? %>
        <p> <%= "Average wage: #{number_to_currency((@wages.sum / @wages.count  ), options = {unit: "Â£"}) }"%> </p>
    <% end %>
  </div>
</div>
