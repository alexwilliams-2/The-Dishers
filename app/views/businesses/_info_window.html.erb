
<%= link_to business, style: 'text-decoration: none; color: #000000' do %>
  <div class="card">
    <%= cl_image_tag business.photo.key%>
    <div class="card-infos">
      <div class="text-center">
        <h2><%= business.name %></h2>
        <p><%= business.address %></p>
      </div>
      <div class="text-center">
      <% business.reviews.each do |review| %>
        <% @wages.push(review.wage) %>
        <% end %>
      <% unless business.reviews.empty? %>
          <p> <%= "Average wage: #{number_to_currency((@wages.sum / @wages.count  ), options = {unit: "Â£"}) }"%> </p>
      <% end %>
    </div>
  </div>
  </div>
<% end %>
