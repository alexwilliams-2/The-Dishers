<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

<div class="container-xl">
          <div class="col-sm-4">
            <div class="user-profile wow fadeInUp" data-wow-delay="0.3s" style="visibility: visible; animation-delay: 0.3s; animation-name: fadeInUp;">
              <div class="user-thumb"> <%= image_tag(@user.photo, alt: "...", width: 350) %>
              </div>
              <!-- Team Details-->
              <div class="user-info">
                <h6><strong> @<%= @user.username %></strong> </h6>
                  <p> <%= @user.email %></p>
                  <p> "<%= @user.bio %>" </p>
                <p class="designation"><i class="fa-solid fa-location-dot" style="color: #009eff;"></i><%= @user.location %></p>
              </div>
            </div>
          </div>
          <div class="col-sm-8"> <h2> Your Favourited Businesses </h2>
            <div class="fave-cards">
                <% @favourites.each do |favourite| %>
               <%= link_to favourite.business, style: 'text-decoration: none; color: #000000' do  %>
                  <div class="fave-card" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('<%= cl_image_path(favourite.business.photo.key) %>');">
                    <h3><%= favourite.business.name %></h3>
                  </div>
                  <% end %>
              <% end %>
            </div>
          </div>

</div>



 <div class="container">
          <div class="text-center">
    <h1>Your reviews</h1>
    </div>
    <% @user.reviews.each do |review| %>
        <div class="review-card col col-sm-4">
          <div class="col-sm-2">
            <div>
            <% review.rating.to_i.times do %>
              <i class="fa fa-star star-active ml-3"></i>
              <% end %>
              </div>
            </div>
            <div class="col-sm-10">
             <h4> <strong> <%= review.business.name %> </strong> </h4>
              <p class="review-content">"<%= review.content %>"</p>
              </div>
            </div>
            <% end %>
    </div>
