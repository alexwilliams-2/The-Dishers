
  <div class="container chatroom">

  <div id="messages-container" data-contoller='chat-subscription' data-chat-subscription-chat-id-value="<%= @chat.id%>">
    <% @chat.messages.each do |message| %>
      <div class="messages" id="message-<%= message.id %>" data-chat-subscription-targets='messages'>
        <small>
          <strong><%= message.user_id %></strong>
          <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        </small>
        <p><%= message.content %></p>
      </div>
    <% end %>
  </div>
</div>





  <!-- Input form -->
<div>
    <%= simple_form_for ([@chat, Message.new]) do |f| %>
    <%= f.input :content,
      label: false,
      placeholder: "Message",
      wrapper_html: {class: "flex-grow-1"}
    %>
    <%= f.button :submit, "Send", class: "btn btn-primary mb-3" %>
  <% end %>
</div>
</div>
