
<div class="container chat">

  <div class="messages" data-chat-subscription-target="messages" data-controller='chat-subscription' data-chat-subscription-chat-id-value="<%= @chat.id %>">
  <% @chat.messages.each do |message| %>
    <%= render "messages/message", message: message %>
  <% end %>
  </div>


 <!-- Input form -->

    <%= simple_form_for [@chat, Message.new],  html: { data: { action: "turbo:submit-end->chat-subscription#resetForm" }, class: "d-flex" } do |f| %>
    <%= f.input :content,
      label: false,
      placeholder: "Message",
      wrapper_html: {class: "flex-grow-1"}
    %>
    <%= f.submit "Send", class: "btn btn-primary mb-3" %>
  <% end %>

</div>
