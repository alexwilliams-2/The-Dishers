<h1> My Chats </h1>

<ul class ="list-group">
  <% @chats.each do |chat| %>
    <% other_user_email = chat.other_user_email(current_user) %>
      <% other_user = User.find_by(email: other_user_email) %>
      <li class="list-group-item">
      <%= link_to chat_path(chat) do %>
      <h2 class="mb-1">
      <%= other_user_email.split('@').first %>
      </h2>
      <% end %>
      </li>
  <% end %>
</ul>
