{
  "name": "app",
  "private": "true",
  "dependencies": {
    "@hotwired/stimulus": "^3.2.1",
    "@hotwired/turbo-rails": "^7.3.0",
    "@popperjs/core": "^2.11.8",
    "@rails/actioncable": "^7.0.5",
    "autoprefixer": "^10.4.16",
    "bootstrap": "^5.1.0",
    "bootstrap-icons": "^1.10.5",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "stimulus-carousel": "^5.0.1",
    "tailwindcss": "^3.3.3",
    "webpack-cli": "^5.1.1"
  },
  "scripts": {
    "start": "webpack-dev-server --config webpack.config.js",
    "build": "webpack --config webpack.config.js",
    "build:css": "postcss app/assets/stylesheets/**/*.css -o public/build/tailwind.css",
    "watch:css": "postcss app/assets/stylesheets/styles.css -o public/build/tailwind.css --watch",
    "heroku-postbuild": "npm run build:css && NODE_ENV=production rails assets:precompile"
  },
  "devDependencies": {
    "@prettier/plugin-ruby": "^4.0.2",
    "prettier": "^3.0.2",
    "webpack": "^5.88.2",
    "webpack-dev-server": "^4.15.1"
  }
}
